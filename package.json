{
  "name": "librenews",
  "version": "1.0.0",
  "description": "Open-source AI-powered news aggregator with cross-regional analysis",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "electron:dev": "npm run build:electron && concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build:electron && npm run build && electron-builder",
    "electron:build:win": "npm run build:electron && npm run build && electron-builder --win",
    "electron:build:mac": "npm run build:electron && npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build:electron && npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.librenews.app",
    "productName": "LibreNews",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.news"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network"
    }
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "idb": "^8.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.1.0",
    "electron": "^35.0.0",
    "electron-builder": "^26.0.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "wait-on": "^8.0.0"
  },
  "overrides": {
    "minimatch": "10.2.2",
    "tar": "7.5.9",
    "glob": "11.1.0",
    "rimraf": "6.0.1",
    "flat-cache": "6.1.6",
    "file-entry-cache": "10.0.6",
    "@eslint/eslintrc": "3.3.1",
    "@humanwhocodes/config-array": "0.13.0"
  }
}
